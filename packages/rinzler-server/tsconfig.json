{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "removeComments": false,
        "alwaysStrict": true,
        "module": "commonjs",
        "target": "es2017",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": false,
        "lib": [
            "dom",
            "es7",
            "es6",
            "es2015.symbol",
            "es2015.symbol.wellknown",
            "es2017"
        ],
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}